<% provide :title, t(".sign_up") %>
<h1 class="text-center"><%= t(".sign_up") %></h1>
<div class="row">
  <%= render "shared/error_messages" %>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= f.label :name, t(User.human_attribute_name("name")) %>
      <%= f.text_field :name %>
      <%= f.label :email %>
      <%= f.email_field :email %>
      <%= f.label :password, t(User.human_attribute_name("password")) %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation, t(User.human_attribute_name("password_confirmation")) %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit t(".create_my_account"), class: "btn btn-primary mt5" %>
    <% end %>
  </div>
</div>
