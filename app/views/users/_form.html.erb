<%= form_for @user do |f| %>
  <%= render "shared/error_messages", object: @user %>
  <%= f.label :name, t(User.human_attribute_name("name")) %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :email, t(User.human_attribute_name("email")) %>
  <%= f.email_field :email, class: "form-control" %>
  <%= f.label :password, t(User.human_attribute_name("password")) %>
  <%= f.password_field :password, class: "form-control" %>
  <%= f.label :password_confirmation, t(User.human_attribute_name("password_confirmation")) %>
  <%= f.password_field :password_confirmation, class: "form-control" %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
